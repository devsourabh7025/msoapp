{
  "baseUrls": {
    "development": "http://localhost:3000",
    "production": "https://msoapp.vercel.app"
  },
  "endpoints": [
    {
      "category": "Authentication",
      "endpoints": [
        {
          "name": "Login",
          "url": "/api/login",
          "method": "POST",
          "authRequired": false,
          "description": "User login endpoint"
        },
        {
          "name": "Register",
          "url": "/api/register",
          "method": "POST",
          "authRequired": false,
          "description": "User registration endpoint"
        },
        {
          "name": "Logout",
          "url": "/api/logout",
          "method": "POST",
          "authRequired": true,
          "description": "User logout endpoint"
        },
        {
          "name": "Get Current User",
          "url": "/api/auth/me",
          "method": "GET",
          "authRequired": true,
          "description": "Get authenticated user information"
        }
      ]
    },
    {
      "category": "Public",
      "endpoints": [
        {
          "name": "Get All Posts",
          "url": "/api/public/posts",
          "method": "GET",
          "authRequired": false,
          "description": "Get all published posts (public)"
        },
        {
          "name": "Get Post by Slug",
          "url": "/api/public/posts/[slug]",
          "method": "GET",
          "authRequired": false,
          "description": "Get a single published post by slug"
        },
        {
          "name": "Get All Categories",
          "url": "/api/public/categories",
          "method": "GET",
          "authRequired": false,
          "description": "Get all categories (public)"
        }
      ]
    },
    {
      "category": "Posts",
      "endpoints": [
        {
          "name": "Create Post",
          "url": "/api/posts",
          "method": "POST",
          "authRequired": true,
          "description": "Create a new post (NORMAL_USER or ADMIN)"
        },
        {
          "name": "Get All Posts",
          "url": "/api/posts",
          "method": "GET",
          "authRequired": true,
          "description": "Get all posts (authenticated)"
        },
        {
          "name": "Get Post Comments",
          "url": "/api/posts/[slug]/comments",
          "method": "GET",
          "authRequired": false,
          "description": "Get comments for a post"
        },
        {
          "name": "Add Comment",
          "url": "/api/posts/[slug]/comments",
          "method": "POST",
          "authRequired": true,
          "description": "Add a comment to a post"
        }
      ]
    },
